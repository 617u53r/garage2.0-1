@model IEnumerable<Garage_2.Models.ParkedVehicle>

@{
    ViewData["Title"] = "Index";
}

@if (TempData["Success"] is string msg)
{
    <div class="alert alert-success alert-dismissible fade show slow-fade"
         role="alert"
         id="successAlert">
        @msg
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0 title">Parked Vehicles</h1>
    </div>

    <p>

        <form asp-action="Index" method="get">
            <div class="input-group mb-3">
                <input type="text"
                       class="form-control"
                       name="licensePlate"
                       value="@Context.Request.Query["licensePlate"]"
                       placeholder="Search for license plate" />
                <button class="btn btn-outline-secondary" type="submit">
                    Search
                </button>
            </div>
        </form>
    </p>

    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.VehicleType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LicensePlate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Color)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Manufacturer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Model)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.NumberOfWheels)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CheckInTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CheckOutTime)
                </th>

            </tr>
        </thead>
        <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LicensePlate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfWheels)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckInTime)
            </td>
            <td class="text-end">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">Edit <i class="bi bi-pencil"></i></a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1">Details <i class="bi bi-info-circle"></i></a>
                <a asp-action="Receipt" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success" onclick="return confirm('Are you sure you want to check out this vehicle?');">CheckOut <i class="bi bi-receipt"></i></a>
            </td>

            </tr>
    }
    </tbody>
    </table>
</div>
@section Scripts {
    <script>
        console.log("Index Scripts section loaded");

        window.addEventListener("load", function () {
            console.log("Window loaded - starting timer");

            setTimeout(function () {
                const el = document.getElementById("successAlert");
                console.log("Alert element:", el);

                if (!el) return;

                // Bootstrap 5 API
                if (window.bootstrap && window.bootstrap.Alert) {
                    console.log("Closing via Bootstrap API");
                    window.bootstrap.Alert.getOrCreateInstance(el).close();
                } else {
                    console.log("Bootstrap API missing - fallback close");
                    el.classList.remove("show");
                    setTimeout(() => el.remove(), 300);
                }
            }, 2000);
        });
    </script>
}

