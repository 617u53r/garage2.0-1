@model Garage_2.ViewModels.CheckOutViewModel

@{
    ViewData["Title"] = "Vehicle checkout";
    bool isCheckedOut = Model.Vehicle.CheckOutTime != null;
}


<h1>Vehicle checkout</h1>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-success">
        @Model.Message
    </div>
}

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicle.VehicleType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vehicle.VehicleType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicle.LicensePlate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vehicle.LicensePlate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicle.CheckInTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vehicle.CheckInTime)
        </dd>
    </dl>

    <div class="d-flex align-items-center gap-3 mt-3">

        @if (!isCheckedOut)
        {
            <form asp-action="Delete" method="post" class="m-0">
                <input type="hidden" asp-for="Vehicle.Id" />
                <button type="submit" class="btn btn-danger">
                    Check out
                </button>
            </form>
        }
        else
        {
            <a asp-action="Receipt"
               asp-route-id="@Model.Vehicle.Id"
               class="btn btn-primary">
                Print receipt
            </a>
        }

        <a asp-action="Index" class="btn btn-outline-secondary">
            Back
        </a>
    </div>
   


</div>
