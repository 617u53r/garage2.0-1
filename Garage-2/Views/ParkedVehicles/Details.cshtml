@model Garage_2.Models.ParkedVehicle
@{
    ViewData["Title"] = "Vehicle Details";
}

<div class="container mt-4">
    <h1 class="mb-4 title">Vehicle Details</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <div>
                <strong>@Model.LicensePlate</strong> - @Model.Manufacturer @Model.Model
            </div>
            <div>
                <span class="badge bg-info">@Model.VehicleType</span>
            </div>
        </div>

        <div class="card-body">
            <table class="table table-striped table-bordered">
                <tbody>
                    <tr>
                        <th>License Plate</th>
                        <td>@Model.LicensePlate</td>
                    </tr>
                    <tr>
                        <th>Color</th>
                        <td>@Model.Color</td>
                    </tr>
                    <tr>
                        <th>Manufacturer</th>
                        <td>@Model.Manufacturer</td>
                    </tr>
                    <tr>
                        <th>Model</th>
                        <td>@Model.Model</td>
                    </tr>
                    <tr>
                        <th>Number of Wheels</th>
                        <td>@Model.NumberOfWheels</td>
                    </tr>
                    <tr>
                        <th>Vehicle Type</th>
                        <td><span class="badge bg-info">@Model.VehicleType</span></td>
                    </tr>
                    <tr>
                        <th>Check-In Time</th>
                        <td>@Model.CheckInTime.ToString("dd MMM yyyy HH:mm")</td>
                    </tr>
                    <tr>
                        <th>Check-Out Time</th>
                        <td>
                            @if(Model.CheckOutTime.HasValue)
                            {
                                @Model.CheckOutTime.Value.ToString("dd MMM yyyy HH:mm")
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Still parked</span>
                            }
                        </td>
                    </tr>
                </tbody>
            </table>

            @{
                var checkOutTime = Model.CheckOutTime ?? DateTime.Now;
                var totalTime = checkOutTime - Model.CheckInTime;

                var totalHours = totalTime.TotalHours;
                var roundedHours = Math.Round(totalHours * 2, MidpointRounding.AwayFromZero) / 2;

                decimal ratePerHour = 20m;
                var estimatedPrice = (decimal)roundedHours * ratePerHour;
            }
            <div class="alert alert-success mt-4">
                <h5 class="mb-2">Current parking cost</h5>
                <p class="mb-1">
                    <strong>Parked time:</strong> @roundedHours hours
                </p>
                <p class="mb-0">
                    <strong>Estimated price:</strong> @estimatedPrice kr
                </p>
            </div>
        </div>


        <div class="card-footer d-flex justify-content-between">
            <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>

            <div>
                <a asp-action="Delete"
                   asp-route-id="@Model.Id"
                   class="btn btn-danger">
                    Check out
                </a>
            </div>
        </div>



    </div>
</div>