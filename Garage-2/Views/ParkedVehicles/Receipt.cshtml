@using Garage_2.ViewModels
@model ReceiptViewModel

@{
    ViewData["Title"] = "Receipt";
}

<h1 class="title">Receipt</h1>

<div>
    <h4>ParkedVehicle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Vehicle Type</dt>
        <dd class="col-sm-10">@Model.VehicleType</dd>

        <dt class="col-sm-2">License Plate</dt>
        <dd class="col-sm-10">@Model.RegistrationNumber</dd>

        <dt class="col-sm-2">Color</dt>
        <dd class="col-sm-10">@Model.Color</dd>

        <dt class="col-sm-2">Manufacturer</dt>
        <dd class="col-sm-10">@Model.Manufacturer</dd>

        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@Model.Model</dd>

        <dt class="col-sm-2">Number Of Wheels</dt>
        <dd class="col-sm-10">@Model.NumberOfWheels</dd>

        <dt class="col-sm-2">Check-In Time</dt>
        <dd class="col-sm-10">@Model.CheckInTime</dd>

        <dt class="col-sm-2">Check-Out Time</dt>
        <dd class="col-sm-10">@Model.CheckOutTime</dd>

        <dt class="col-sm-2">Total Parked Time</dt>
        <dd class="col-sm-10">@Model.TotalParkedTime</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>
    </dl>
</div>
<div>
    <a asp-action="Create" class="btn btn-sm btn-outline-primary me-1">Park new Vehicle</a> |
    <a asp-action="Index" class="btn btn-sm btn-outline-secondary me-1">Back to List</a>
</div>
