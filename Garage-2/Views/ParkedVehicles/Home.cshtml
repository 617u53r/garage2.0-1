@{
    ViewData["Title"] = "Garage Management System";
}


<!-- Hero Section -->
<section class="hero-section">
    <div class="overlay"></div>
    <div class="content">
        <h1 class="display-4 fw-bold">Garage Management System</h1>
        <p class="lead mt-3">Manage parked vehicles quickly, securely, and efficiently.</p>
        <p class="lead">Parking fees are charged from the beginning of each half-hour interval at 20 SEK per half-hour.</p>
        <a asp-action="Create" class="btn btn-primary btn-lg mt-3">Begin parking</a>
    </div>
</section>

<!-- Services Section -->
<section id="services" class="py-5">
    <div class="container">
        <h2 class="text-center mb-5 title">Our Services</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Vehicle Check-In</h5>
                        <p class="card-text">Register vehicles with license plate, type, and check-in time.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Vehicle Tracking</h5>
                        <p class="card-text">Track parked vehicles in real-time inside the garage.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Check-Out & Billing</h5>
                        <p class="card-text">Easy vehicle check-out with time and cost calculation.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section id="about" class="bg-light py-5">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-md-8">
                <h2>About Our Garage</h2>
                <p class="mt-3">
                    Our garage system is built to help operators manage parking efficiently.
                    With a simple interface and fast operations, you save time and avoid mistakes.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="py-5 text-center">
    <div class="container">
        <h2 class="mb-3">Ready to manage your garage?</h2>
        <a href="#" class="btn btn-success btn-lg">Launch Application</a>
    </div>
</section>
